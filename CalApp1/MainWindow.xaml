<Window x:Class="CalendarApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarApp1"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="#403A44"
        WindowStyle="None"
        Title="MainWindow" Height="800" Width="1400">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="500"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>

        <Grid Background="#3E3544" Grid.ColumnSpan="3" >

            <TextBlock 
                Text="CalApp"
                Foreground="White"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="25"
                FontWeight="Medium"
            />

        </Grid>

        <Viewbox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="1" Stretch="Fill" StretchDirection="UpOnly">
            <Calendar  Background="#3E3544"
                       Foreground="White"
                       BorderBrush="{x:Null}"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Center"/>
        </Viewbox>

        <Button
            x:Name="btnToDo"
            Click="btnToDo_Click"
            Grid.Column="0"
            Grid.Row="1" Margin="0,397,0,-86"
            Height="90"
            Width="400"
            Background="#3E3544" 
            Foreground="White"
            Content="To do list"
            FontSize="22"
            />
        <Button
            Grid.Column="0"
            Grid.Row="1" Margin="0,487,0,-176"
            Height="90"
            Width="400"
            Background="#3E3544" 
            Foreground="White"
            Content="Events"
            FontSize="22"/>
        <Button
            Grid.Column="0"
            Grid.Row="1" Margin="0,578,0,-267"
            Height="90"
            Width="400"
            Background="#3E3544" 
            Foreground="White"
            Content="Habit creator"
            FontSize="22"/>
        <Button
            Grid.Column="0"
            Grid.Row="1" Margin="0,669,0,-358"
            Height="90"
            Width="400"
            Background="#3E3544" 
            Foreground="White"
            Content="Habit statistics"
            FontSize="22"/>

    </Grid>
</Window>
